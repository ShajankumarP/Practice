body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
}

.container {
    display: flex;
    height: 100vh;
}

.main-content {
    flex: 1;
    padding: 30px;
    background-color: white;
}


.side-bar {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 250px;
    padding: 20px;
}

aside img {
    margin: 25px 25px 25px 40px;
    height: 60px;
    width: 120px;
}

aside .button {
    height: fit-content;
    width: fit-content;
    padding: 5px 5px 5px 35px;
}

aside .button button {
    font-family: "Popins", 'Ubuntu';
    font-weight: 400;
    font-style: normal;
    width: 160px;
    height: 48px;
    color: grey;
    border: none;
    text-align: left;
    padding-left: 25px;
    background-color: transparent;
}

aside div button:focus {
    color: rgb(231,10,10);
    background-color: rgb(228,196,196);
    border-radius: 5px;
}

aside .button button:hover {
    cursor: pointer;
}

aside .button:hover {
    border-left: 5px solid rgb(231,10,10);
    padding-left: 30px;
    transition: border-left 0.25s;
}

.busy-mode {
    position: absolute;
    bottom: 2px;
    left: 20px;
    right: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #666;
    font-size: 16px;
}

.busy-mode span{
    margin-right: 10px;
}

.busy-mode input[type="checkbox"] {
    display: none;
}

.toggle-switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 24px;
    background-color: #ccc;
    border-radius: 12px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.toggle-switch::after {
    content: '';
    position: absolute;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: white;
    top: 2px;
    left: 2px;
    transition: transform 0.3s;
}

.busy-mode input[type="checkbox"]:checked + .toggle-switch {
    background-color: #27ae60;
}

.busy-mode input[type="checkbox"]:checked + .toggle-switch::after {
    transform: translateX(26px);
}


.top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: white;
    margin-bottom: 30px;
}

.search-container {
    position: relative;
    display: flex;
    align-items: center;
    margin-right: 80px;
}

.search-container i {
    position: absolute;
    left: 10px;
    color: #888;
}

.top-bar input[type="text"] {
    padding: 8px 10px 8px 30px;
    width: 200px;
    height: 20px;
    background-color: #f9f9f9; 
    font-size: 14px;
    border: 0.5px solid #5e5b5b;
    border-radius: 10px;
}

.top-bar .top-bar-right {
    display: flex;
    align-items: center;
    gap: 20px;
}

.order-status {
    color: #333;
    padding: 10px 20px;
    border: none;
    border-radius: 20px;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
}

.order-toggle {
    display: flex;
    align-items: center;
    gap: 5px;
}

.order-toggle input[type="checkbox"] {
    display: none;
}

.order-toggle .toggle-switch {
    margin-left: -5px;
}

.order-toggle input[type="checkbox"]:checked + .toggle-switch {
    background-color: #27ae60;
}

.order-toggle input[type="checkbox"]:checked + .toggle-switch::after {
    transform: translateX(26px);
}

.notification-icon {
    font-size: 18px;
    color: #666;
    cursor: pointer;
}

.profile {
    display: flex;
    align-items: center;
    gap: 10px;
}

.profile img {
    border-radius: 20%;
    width: 30px;
    height: 30px;
    margin-right: 10px;
}

.profile span {
    font-size: 16px;
    color: #333;
    font-weight: bold;
}


.dashboard {
    background-color: #FFF5F5;
    border-radius: 10px;
    padding: 10px;
}

.dashboard h2 {
    font-size: 1.5em;
    margin: 20px;
    margin-top: 30px;
}

.dashboard .summary-cards {
    display: flex;
    gap: 20px;
    margin-bottom: 30px;
    margin-left: 20px;
    margin-right: 20px;
}

.card {
    flex: 1;
    background-color: white;
    border-radius: 10px;
    padding: 20px;
    display: flex;
    align-items: center;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.icon-container {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15px;
}

.orders .icon-container {
    background-color: #FFF9E6;
}

.pending .icon-container {
    background-color: #E6F0FF;
}

.dispatch .icon-container {
    background-color: #E6FFF9;
}

.icon-container i {
    font-size: 24px;
}

.orders .icon-container i {
    color: #FFB300;
}

.pending .icon-container i {
    color: #4285F4;
}

.dispatch .icon-container i {
    color: #34A853;
}

.card-content {
    flex-grow: 1;
}

.card-content h3 {
    font-size: 24px;
    margin: 0;
    font-weight: bold;
}

.card-content p {
    margin: 5px 0 0;
    color: #666;
}


.orders-table {
    padding: 20px;
}

.orders-table header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.recent-orders-btn {
    background-color: transparent;
    border: 1px solid #333;
    padding: 8px 15px;
    cursor: pointer;
    color: #333;
    font-weight: bold;
    border-radius: 10px;
}

table {
    border-collapse: separate;
    border-spacing: 0 10px;
    width: 100%;
}

thead tr, tbody tr {
    background-color: white;
    box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

thead th, tbody td {
    padding: 15px 10px;
}

thead th {
    text-align: left;
    color: #888;
    font-weight: normal;
}

thead th:first-child, tbody td:first-child {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
}

thead th:last-child, tbody td:last-child {
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
}

tbody td img {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-right: 10px;
    vertical-align: middle;
}

td.delivery {
    color: #ff6b6b;
}

.status {
    padding: 5px 3px;
}

.status-cell {
    vertical-align: middle;
    height: 100%;
    text-align: center;
}

.status-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 5px 5px;
    border-radius: 10px;
    font-size: 0.9em;
    white-space: nowrap;
    font-weight: 500;
}

.status-badge.on-the-way {
    background-color: #fff3cd;
    color: #ffa000;
}

.status-badge.ready {
    background-color: #ffebee;
    color: #ff0000;
}

.action-btn {
    background: none;
    border: none;
    font-size: 1.2em;
    cursor: pointer;
}

td:nth-child(4)::before {
    content: "\f017";
    font-family: "Font Awesome 5 Free";
    margin-right: 5px;
}


th:nth-child(1), td:nth-child(1) { width: 8%; }
th:nth-child(2), td:nth-child(2) { width: 20%; }
th:nth-child(3), td:nth-child(3) { width: 12%; }
th:nth-child(4), td:nth-child(4) { width: 15%; }
th:nth-child(5), td:nth-child(5) { width: 12%; }
th:nth-child(6), td:nth-child(6) { 
    width: 130px;
    min-width: 130px;
    text-align: center;
}
th:nth-child(7), td:nth-child(7) { width: 10%; }
th:nth-child(8), td:nth-child(8) { width: 8%; }

